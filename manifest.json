{
  "manifest_version": 3,
  "name": "Chess Flipper",
  "version": "2.0",
  "description": "Automatically flips the board on chess.com puzzles.",
  "permissions": ["storage"],
  "host_permissions": ["*://www.chess.com/puzzles/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.chess.com/puzzles/*"],
      "js": ["content.js"]
    }
  ]
} 