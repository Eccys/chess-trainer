{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "types": ["wxt"]
  },
  "include": [".wxt/wxt.d.ts", "entrypoints/**/*"],
  "exclude": ["node_modules"]
}